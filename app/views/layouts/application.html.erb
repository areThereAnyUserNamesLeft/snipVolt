    <!DOCTYPE html>
<html>
<head>
    <title>
    <% if content_for?(:title) %>
            <%= yield(:title) %>
        <% else %>
            snipVolt
        <% end %>
    </title>

  <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Material Design fonts -->
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">

  <!-- Bootstrap -->
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <!-- Bootstrap Material Design -->
  <link rel="stylesheet" type="text/css" href="dist/css/ripples.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/ace/1.1.01/ace.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

        <% flash.each do |key, message| %>
            <div class="alert alert-<%= key %>">
                <%= message %>
        <% end %>
    </div>
</div>
<nav class="navbar  navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
                 <span class="sr-only">Toggle navigation</span>
                 <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse"  id="collapse">
            <ul class="nav navbar-nav">
            <li><%= link_to '/' do %>
            <i class="glyphicon glyphicon-home"></i> Home
            <% end %></li>
            <!-- <li>
            <%#= link_to new_snip_path do %>
            <i class="glyphicon glyphicon-scissors"></i> New snip?
            <%# end %></li> -->
            <li><%= link_to new_volt_path do %>
            <i class="glyphicon glyphicon-flash"></i> New volt?
            <% end %></li>
        <% unless user_signed_in? %>
            <li class="<%= '' if current_page?('/users/sign_up') %>">
                <%= link_to new_user_registration_path do %>
            <i class="glyphicon glyphicon-edit"></i> Sign up?
            <% end %></li>
            <li class="<%= '' if current_page?('/users/sign_up') %>">
                <%= link_to new_user_session_path do %>
            <i class="glyphicon glyphicon-user"></i> Log in?
            <% end %></li>
        <% end %>
         </ul>
         <div class="navbar-right">
            <% if user_signed_in? %>

                    <p class="navbar-text">
                        Hello <i class="glyphicon glyphicon-user"></i> <%= current_user.email %>
                    </p>
                    <ul class="nav navbar-nav">
                        <li>
                            <%= link_to "Sign out?", destroy_user_session_path,
                            method: :delete %>
                        </li>
                    </ul>
            <% end %>

                <div class="pull-right">
                    <a id="logo" href="/"><span class="text-hide">snipVolt</span><%= image_tag("sVOptimised.svg", :alt => "snipVolt logo") %></a>
                </div>

             </div>
         </div>
     </div>
</nav>


<div class="container">

<div class="row">
<div class="col-sm-2">
</div>
<div class="col-sm-8">


<%= yield %>


</div>
<div class="col-sm-2"></div>

<div class="row">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-8">

    </div>
<div class="col-sm-2">
</div></div>


</div>

</div>
<script>
$.material.init();
$.material.ripples();
</script>
</body>
</html>
