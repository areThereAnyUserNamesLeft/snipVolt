<header>
    <h1>Users <i class="material-icons">group</i></h1>
    <ul class="actions">
        <li>
            <%= link_to "Spawn user", new_admin_user_path, class: "new" %>
        </li>
    </ul>
</header>
<div class="alert alert-warning">

    <h3 class="text-center">
        Please remember, with power comes responsibility.
    </h3>

</div>
<div class="jumbotron">

<table id="user-list">
    <% @users.each do |user| %>
    <tr>

    <th>
        <%= link_to user, [:admin,user] %>
    </th>
    <th>
        &nbsp;
    </th>
    <td>
        <%= link_to "Edit User", edit_admin_user_path(user), class: "edit pull-right" %>
    </td>
    <% end %>
</tr>
</table>
</div>
