<header>
    <h2>Sign up</h2>
</header>
  <div class="form-inputs form-group input-lg">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


    <%= f.input :email, required: true, autofocus: true, class: "form-control input-lg" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), class: "form-control input-lg" %>
    <%= f.input :password_confirmation, required: true , class: "form-control input-lg"%>


  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-success btn-lg" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
  </div>
